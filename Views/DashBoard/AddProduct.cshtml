@model ProdectCompany
@{
    Layout = "DashBoardLayout";
}

<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Adding Product</span>
    </div>

    <div>
        <form method="post" asp-action="AddProduct" class="row">
            <div class="mb-3">
                <label asp-for="@Model.product.Name" class="form-label">Product Name</label>
                <input type="text"
                       asp-for="@Model.product.Name"
                       
                       class="form-control"
                       placeholder="" />
                <span asp-validation-for="@Model.product.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.product.Description" class="form-label">Product Description</label>
                <textarea type="text"
                          asp-for="@Model.product.Description"
                          class="form-control"
                          placeholder=""></textarea>
                <span asp-validation-for="@Model.product.Description" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.product.Quantity" class="form-label">Product Quantity</label>
                <input type="number"
                       asp-for="@Model.product.Quantity"
                       class="form-control"
                       placeholder="">
                <span asp-validation-for="@Model.product.Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.product.Price" class="form-label">Product Price</label>
                <input type="number"
                       asp-for="@Model.product.Price"
                       class="form-control"
                       placeholder="">
                <span asp-validation-for="@Model.product.Price" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="true" asp-for="@Model.product.EnableSize" />
                    <label class="form-check-label" asp-for="@Model.product.EnableSize"> Enable Product Size </label>
                </div>


            </div>

            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.product.CompanyId" class="form-label">company</label>
                <select class="form-select "
                        asp-for="@Model.product.CompanyId">
                    <option hidden>Select one</option>
                        @{
                        foreach(var item in Model._company){
                            <option value="@item.Id">@item.Name</option>
                        }
                        }
                    
                </select>
                <span asp-validation-for="@Model.product.CompanyId" class="text-danger"></span>
            </div>


            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>

    </div>
</div>