@model IEnumerable<Blog>
@{
    Layout = "DashBoardLayout";
}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">All Blogs</span>
        </div>
    </div>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td class="table-light">id</td>
                    <td class="table-light">Title</td>
                    <td class="table-light">Content</td>
                    <td class="table-light">Author Name</td>
                    <td class="table-light">Category</td>
                    <td class="table-light">Available</td>
                    <td class="table-light">operation</td>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Content</td>
                        <td>@item.AuthorName</td>
                        <td>@item.category.Name</td>
                        <td>@item.available </td>
                        <td>
                            <a class="btn btn-success" asp-action="AddBlog" asp-route-id="@item.Id" role="button">
                                <span class="material-symbols-outlined">
                                    Edit
                                </span>
                            </a>
                            <a class="btn btn-danger " asp-action="DeleteBlog" asp-route-id="@item.Id" role="button">
                                <span class="material-symbols-outlined">
                                    delete
                                </span>
                            </a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>

    </div>




</div>