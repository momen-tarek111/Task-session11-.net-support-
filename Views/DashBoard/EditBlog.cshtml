@model Blog
@{
    Layout = "DashBoardLayout";
}

<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Editing Blog</span>
    </div>

    <div>
        <form method="post" asp-action="EditBlog" class="row">
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Blog Title</label>
                <input type="text"
                       asp-for="Title"
                       value="@Model.Title"
                       class="form-control"
                       placeholder="" />

            </div>
            <div class="mb-3">
                <label asp-for="Content" class="form-label">Blog Content</label>
                <textarea type="text"
                          asp-for="Content"
                          class="form-control"
                          value="@Model.Content"
                          placeholder=""></textarea>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="AuthorName" class="form-label">Author Name</label>
                <input type="text"
                       asp-for="AuthorName"
                       value="@Model.AuthorName"
                       class="form-control"
                       placeholder="">
            </div>

            <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="@Model.available" asp-for="available" />
                    <label class="form-check-label" asp-for="available"> Available </label>
                </div>
            </div>

            <div class="mb-3 col-lg-6">
                <label asp-for="category.Id" class="form-label">category</label>
                <select class="form-select "
                        asp-for="category.Id" value="@Model.category.Id">
                    @{
                        if (Model.category.Id == 1)
                        {
                            <option hidden>Select one</option>
                            <option selected value="1">Tutorial</option>
                            <option value="2">News</option>
                            <option value="3">Business</option>
                            <option value="4">Fitness</option>
                            <option value="5">Sports</option>
                        }
                        else if (Model.category.Id == 2)
                        {

                            <option hidden>Select one</option>
                            <option value="1">Tutorial</option>
                            <option selected value="2">News</option>
                            <option value="3">Business</option>
                            <option value="4">Fitness</option>
                            <option value="5">Sports</option>
                        }
                        else if (Model.category.Id == 3)
                        {

                            <option hidden>Select one</option>
                            <option value="1">Tutorial</option>
                            <option value="2">News</option>
                            <option selected value="3">Business</option>
                            <option value="4">Fitness</option>
                            <option value="5">Sports</option>
                        }
                        else if (Model.category.Id == 4)
                        {

                            <option hidden>Select one</option>
                            <option value="1">Tutorial</option>
                            <option value="2">News</option>
                            <option value="3">Business</option>
                            <option selected value="4">Fitness</option>
                            <option value="5">Sports</option>
                        }
                        else if (Model.category.Id == 5)
                        {

                            <option hidden>Select one</option>
                            <option value="1">Tutorial</option>
                            <option value="2">News</option>
                            <option value="3">Business</option>
                            <option value="4">Fitness</option>
                            <option selected value="5">Sports</option>
                        }
                        else
                        {
                            <option hidden>Select one</option>
                            <option value="1">Tutorial</option>
                            <option value="2">News</option>
                            <option value="3">Business</option>
                            <option value="4">Fitness</option>
                            <option value="5">Sports</option>

                        }
                    }

                </select>
            </div>


            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>

    </div>
</div>