@model BlogCategory
@{
    Layout = "DashBoardLayout";

}
<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Adding Blog</span>
    </div>

    <div>
        <form method="post" asp-action="AddBlog" class="row">
            <div class="mb-3">
                <label asp-for="@Model.blog.Title" class="form-label">Blog Title</label>
                <input type="text"
                       asp-for="@Model.blog.Title"
                       value="@Model.blog.Title"
                       class="form-control"
                       placeholder="" />
                <span asp-validation-for="@Model.blog.Title" class="text-danger"></span>


            </div>
            <div class="mb-3">
                <label asp-for="@Model.blog.Content" class="form-label">Blog Content</label>
                <textarea type="text"
                          asp-for="@Model.blog.Content"
                          value="@Model.blog.Content"
                          class="form-control"
                          placeholder=""></textarea>
                <span asp-validation-for="@Model.blog.Content" class="text-danger"></span>

            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.blog.AuthorName" class="form-label">Author Name</label>
                <input type="text"
                       asp-for="@Model.blog.AuthorName"
                       value="@Model.blog.AuthorName"
                       class="form-control"
                       placeholder="">
                <span asp-validation-for="@Model.blog.AuthorName" class="text-danger"></span>

            </div>

            <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                <div class="form-check">
                    @{
                        if (Model.blog.Title == null)
                        {
                            <input class="form-check-input" type="checkbox" value="true" asp-for="@Model.blog.available" />
                            <label class="form-check-label" asp-for="@Model.blog.available"> Available </label>
                        }
                        else if (Model.blog.available)
                        {
                            <input class="form-check-input" type="checkbox" value="true" checked asp-for="@Model.blog.available" />
                            <label class="form-check-label" asp-for="@Model.blog.available"> Available </label>
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" value="true" unchecked asp-for="@Model.blog.available" />
                            <label class="form-check-label" asp-for="@Model.blog.available"> Available </label>
                        }
                    }

                </div>
            </div>

            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.blog.CategoryId" class="form-label">category</label>
                <select class="form-select "
                        asp-for="@Model.blog.CategoryId">
                    @{
                        if (Model.blog.CategoryId==null)
                        {
                            <option hidden>Select one</option>
                            @foreach (var item in Model.categories)
                            {

                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                        else
                        {

                            @foreach (var item in Model.categories)
                            {
                                if (item.Id == Model.blog.CategoryId)
                                {
                                    <option selected value="@item.Id">@item.Name</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            }
                        }
                       }
                </select>
                <span asp-validation-for="@Model.blog.CategoryId" class="text-danger"></span>

            </div>


            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>

    </div>
</div>