@model BlogsCategories

<div class="hero-wrap hero-bread" style="background-image: url(@Url.Content("~/images/bg_6.jpg"));">
	<div class="container">
		<div class="row no-gutters slider-text align-items-center justify-content-center">
			<div class="col-md-9 ftco-animate text-center">
				<p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Blog</span></p>
				<h1 class="mb-0 bread">Blog</h1>
			</div>
		</div>
	</div>
</div>
<section class="ftco-section ftco-degree-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 order-lg-last ftco-animate">
				<div class="row">
					@{
						foreach(var item in Model.blogs)
						{
			
							<div class="col-md-12 d-flex ftco-animate">
								<div class="blog-entry align-self-stretch d-md-flex">
									<a href="blog-single.html"  >
										<img class="block-20" src="~/Images/@item.img" />
									</a>
									
									<div class="text d-block pl-md-4">
										<div class="meta mb-3">
											<div><a href="#">@item.datetime.ToString()</a></div>
											<div><a href="#">@item.AuthorName</a></div>
											<div><a href="#" class="meta-chat"><span class="icon-chat"></span> @item.coments</a></div>
										</div>
										<h3 class="heading"><a href="#">@item.Title</a></h3>
										<p>@item.Content</p>
										<p><a href="blog-single.html" class="btn btn-primary py-2 px-3">Read more</a></p>
									</div>
								</div>
							</div>
						}
					}
				</div>
				<div class="row mt-2">
					<div class="col">
						<div class="block-27">
							<ul>
								<li><a href="#">&lt;</a></li>
								<li class="active"><span>1</span></li>
								<li><a href="#">2</a></li>
								<li><a href="#">3</a></li>
								<li><a href="#">4</a></li>
								<li><a href="#">5</a></li>
								<li><a href="#">&gt;</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div> <!-- .col-md-8 -->
			<div class="col-lg-4 sidebar ftco-animate">
				<div class="sidebar-box">
					<form action="#" class="search-form">
						<div class="form-group">
							<span class="icon ion-ios-search"></span>
							<input type="text" class="form-control" placeholder="Type a keyword and hit enter">
						</div>
					</form>
				</div>
				<div class="sidebar-box ftco-animate">
					<h3 class="heading">Categories</h3>
					<ul class="categories">
						@{
							foreach(var item in Model.categories)
							{
								
												int c = 0;
												foreach(var item2 in Model.blogs)
												{
													if (item2.CategoryId == item.Id)
													{
														c++;
													}
												}
								<li><a href="#">@item.Name<span>(@c)</span></a></li>
							}
						}


					</ul>
				</div>

				<div class="sidebar-box ftco-animate">
					<h3 class="heading">Recent Blog</h3>
					@{
						int i = 1;
						foreach(var item3 in Model.blogs)
						{
							<div class="block-21 mb-4 d-flex">
								
									<img src="~/Images/@item3.img" class="blog-img mr-4" >
								
								<div class="text">
									<h3 class="heading-1"><a href="#">@item3.Title</a></h3>
									<div class="meta">
										<div><a href="#"><span class="icon-calendar"></span>@item3.datetime.ToString()</a></div>
										<div><a href="#"><span class="icon-person"></span> @item3.AuthorName</a></div>
										<div><a href="#"><span class="icon-chat"></span>@item3.coments</a></div>
									</div>
								</div>
							</div>
							i++;
							if (i == 4)
							{
								break;
							}
						}
					}
				</div>

				<div class="sidebar-box ftco-animate">
					<h3 class="heading">Tag Cloud</h3>
					<div class="tagcloud">
						<a href="#" class="tag-cloud-link">shop</a>
						<a href="#" class="tag-cloud-link">products</a>
						<a href="#" class="tag-cloud-link">shirt</a>
						<a href="#" class="tag-cloud-link">jeans</a>
						<a href="#" class="tag-cloud-link">shoes</a>
						<a href="#" class="tag-cloud-link">dress</a>
						<a href="#" class="tag-cloud-link">coats</a>
						<a href="#" class="tag-cloud-link">jumpsuits</a>
					</div>
				</div>

				<div class="sidebar-box ftco-animate">
					<h3 class="heading">Paragraph</h3>
					<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ducimus itaque, autem necessitatibus voluptate quod mollitia delectus aut, sunt placeat nam vero culpa sapiente consectetur similique, inventore eos fugit cupiditate numquam!</p>
				</div>
			</div>

		</div>
	</div>
</section> <!-- .section -->