@page
@model Project3.Pages.Companies.ViewCompanyModel
@{
    Layout = "DashBoardLayout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">All Product</span>
        </div>
    </div>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td class="table-light">id</td>
                    <td class="table-light">Name</td>
                    <td class="table-light">operation</td>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.companies)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
         
                        <td>
                            <a class="btn btn-success" asp-page="EditCompany" asp-route-id="@item.Id" role="button">
                                <span class="material-symbols-outlined">
                                    Edit
                                </span>
                            </a>
                            <form asp-page-handler="Delete" method="post"  asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-danger " role="button">
                                    delete
                                </button>
                            </form>
                          
                        </td>

                    </tr>
                }

            </tbody>
        </table>

    </div>




</div>