@page
@model Project3.Pages.Companies.EditCompanyModel
@{
    Layout = "DashBoardLayout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Adding Company</span>
    </div>

    <div>
        <form method="post" asp-page="EditCompany" class="row">
            <div class="mb-3">
                <label asp-for="company.Name" class="form-label">Product Name</label>
                <input type="text"
                       asp-for="company.Name"
                       class="form-control"
                       placeholder="" />
                <span asp-validation-for="company.Name" class="text-danger"></span>
            </div>



            <input hidden asp-for="company.Id" />
            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>

    </div>
